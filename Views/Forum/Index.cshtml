@model Forum.Models.Forum.ForumIndexModel

<h1>Forums</h1>

<table id="forumIndexTable" class="table table-hover">
    <tbody>
    @foreach (var forum in Model.ForumList)
    {
        <tr>
            <td>
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
                    @forum.Name
                </a>
            </td>
            <td>
                @forum.Description
            </td>
        </tr>
    }
    </tbody>
</table>













