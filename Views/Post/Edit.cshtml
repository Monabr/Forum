@model Forum.Models.Post.PostIndexModel

<div class="container body-content">
    <div class="row">
        <div id="createReply" class="col">
            <form asp-action="EditPost" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PostContent">Edit your post:</label>
                    <textarea asp-for="PostContent" rows="20" class="form-control" placeholder="Reply here">@Model.PostContent</textarea>
                    <span asp-validation-for="PostContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitRaplyBtn" class="btn btn-primary">Submit</button>
                <input asp-for="Id" type="hidden" />
            </form>
        </div>
    </div>
</div>