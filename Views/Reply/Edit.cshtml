@model Forum.Models.Reply.PostReplyModel

<div class="container body-content">
    <div class="row">
        <div id="createReply" class="col">
            <form asp-action="EditReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent">Edit your reply:</label>
                    <textarea asp-for="ReplyContent" rows="20" class="form-control" placeholder="Reply here">@Model.ReplyContent</textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <button type="submit" id="submitRaplyBtn" class="btn btn-primary">Submit</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
                <input asp-for="Id" type="hidden" />
            </form>
        </div>
    </div>
</div>