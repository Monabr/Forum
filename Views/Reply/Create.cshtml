@model Forum.Models.Reply.PostReplyModel

    <div class="container">
        <div class="row">
            <div class="col">
                Reply | @Model.PostTitle
            </div>
        </div>
        <div class="row">
            <div id="postReply" class="col">
                <h3>
                    @Model.PostTitle
                </h3>
                <p>
                    @Model.PostContent
                </p>
            </div>
        </div>
        <div class="row">
            <div id="createReply" class="col">
                <form asp-action="AddReply" method="post" id="addPostForm">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ReplyContent">Reply:</label>
                        <textarea asp-for="ReplyContent" rows="20" class="form-control" placeholder="Reply here"></textarea>
                        <span asp-validation-for="ReplyContent" class="text-danger"></span>
                    </div>
                    <button type="submit" id="submitRaplyBtn" class="btn btn-primary">Submit</button>
                    <input asp-for="AuthorId" type="hidden" />
                    <input asp-for="PostId" type="hidden" />
                    <input asp-for="ForumId" type="hidden" />
                </form>
            </div>
        </div>
    </div>